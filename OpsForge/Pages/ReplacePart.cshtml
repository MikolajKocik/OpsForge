@page "{id:int}"
@model OpsForge.Web.Pages.ReplacePartModel
@{
}

<h2>Replace parts in the machine #@this.Model.MachineId</h2>    

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="MachineId" />

    <div class="mb-3">
        <label>Choose machine's slot:</label>
        <select asp-for="SelectedPartType" asp-items="Model.AvailablePartTypes" class="form-control">
            <option value="">-- Choose the part --</option>
        </select>
        <span asp-validation-for="SelectedPartType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Choose the part from inventory:</label>
        <select asp-for="SelectedInventoryPartId" asp-items="Model.InventoryPartOptions" class="form-control">
            <option value="">-- Select part from inventory --</option>
        </select>
        <span asp-validation-for="SelectedInventoryPartId" class="text-danger"></span>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Confirm replacement</button>
        <a asp-page="./Details" asp-route-id="@this.Model.MachineId" class="btn btn-secondary">Cancel</a>
    </div>
</form>